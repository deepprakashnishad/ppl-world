{
  "hosting": {
    "public": "dist",
    "redirects": [],
    "rewrites":[{
      "source": "/api/:path*",
      "destination": "https://goodact-vcm3.onrender.com/:path"
    }, {
      "source": "/allpay/:path*",
      "destination": "https://node-allpay.onrender.com/:path"
    }, {
      "source": "/api-pincode/:path*",
      "destination": "https://api.postalpincode.in/pincode/:path"
    }, {
      "source": "**",
      "destination": "/index.html"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },

  "emulators": {

    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  }
}
