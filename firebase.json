{
  "hosting": {
    "public": "dist",
    "redirects": [ {
      "source": "**/api-pincode/:path",
      "destination": "https://api.postalpincode.in/pincode/:path",
      "type": 301
    }],
    "rewrites":[{
      "source": "**",
      "destination": "/index.html"
    }, {
      "source": "/api/:path*",
      "destination": "https://goodact.onrender.com/:path"
    }, {
      "source": "/allpay/:path*",
      "destination": "https://node-allpay.onrender.com/:path"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },

  "emulators": {

    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  }
}
